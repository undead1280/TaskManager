<%= form_for :project, url: projects_path do |f| %>
  <p>
    <h2><%= 'Project name: '%>:</h2>
    <br>
    <%= f.text_field(:name, {:class => 'form-control'}) %>
  </p>
  <%= f.hidden_field :user_id, :value => @project.user_id%>
  <p>
    <%= f.submit ({:value => 'Save', :class => 'btn btn-success'})%>
  </p>
<%end%>